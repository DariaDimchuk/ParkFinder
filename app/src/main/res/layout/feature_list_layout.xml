<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lvFeatureList">

    <LinearLayout
        android:id="@+id/featureRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/featureRow_Padding"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkboxFeature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false" />

        <TextView
            android:id="@+id/tvFeature"
            android:textSize="18sp"
            android:textColor="@color/BasicBlack"
            android:paddingTop="@dimen/feature_PaddingTop"
            android:layout_marginBottom="@dimen/feature_MarginBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/feature_MarginEnd" />

    </LinearLayout>

</LinearLayout>
