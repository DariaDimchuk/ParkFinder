<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchByLocation">


    <TextView
        android:id="@+id/tvSearchByLocation"
        android:layout_width="@dimen/searchTitleWidth"
        android:layout_height="@dimen/searchTitleHeight"
        android:layout_marginTop="@dimen/searchTitleMarginTop"
        android:gravity="center"
        android:text="@string/locationSearchTxt"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/searchTitleTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <Spinner
        android:id="@+id/spLocation"
        android:layout_width="@dimen/searchByLocationSpinner_Width"
        android:layout_height="@dimen/searchByLocationSpinner_Height"
        android:layout_marginTop="@dimen/searchByLocationSpinner_MarginTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <Button
        android:id="@+id/btnSearch"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/widthSearchBtn"
        android:layout_height="@dimen/heightSearchBtn"
        android:layout_marginTop="@dimen/searchByLocationSearchBtn_MarginTop"
        android:text="@string/btnSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spLocation" />


</androidx.constraintlayout.widget.ConstraintLayout>